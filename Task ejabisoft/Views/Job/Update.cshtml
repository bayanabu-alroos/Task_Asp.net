<div class="modal fade" id="updateModal" tabindex="-1" aria-labelledby="updateModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="updateModalLabel">Update Job</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="updateJobForm" method="post" action="/Job/Update">
                <div class="modal-body">
                    <input type="hidden" id="jobId" name="Id" />
                    <div class="mb-3">
                        <label for="jobName" class="form-label">Job Name</label>
                        <input type="text" class="form-control" id="jobName" name="Name">
                    </div>
                    <div class="mb-3">
                        <label for="jobCategory" class="form-label">Job Category</label>
                        <select class="form-select" id="jobCategory" name="Category">
                            <option value="Management">Management</option>
                            <option value="Supervision">Supervision</option>
                            <option value="Laborer">Laborer</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Update Job</button>
                </div>
            </form>
        </div>
    </div>
</div>